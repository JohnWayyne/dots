!rofi settings
rofi.font: 		Terminus 12
rofi.lines:		10
rofi.parse-hosts: false
rofi.width:		25



!URxvt settings
URxvt.scrollBar: False
URxvt.font: xft:Terminus:size=9:antialias=false
URxvt.boldFont: xft:Terminus:size=9:antialias=false
URxvt.letterSpace: -1

!Perl extensions
URxvt.perl-ext-common: default,matcher,clipboard,resize-font

!Copy and paste in urxvt
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

!Resize font on the fly
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

!Clickable URLs
URxvt.url-launcher: /usr/bin/google-chrome-stable
URxvt.matcher.button: 1

